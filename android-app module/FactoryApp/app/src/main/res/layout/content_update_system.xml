<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_update_system"
    tools:context="com.ahmed.example.factoryapp.UpdateSystem">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Update_usertemp_editText"
        android:layout_marginTop="37dp"
        android:hint="UserTemp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Update_submit_button"
        android:layout_alignEnd="@+id/Update_submit_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Update_usertemp_textView"
        android:layout_alignBottom="@+id/Update_usertemp_editText"
        android:layout_toRightOf="@+id/Profile_currenttemp_imageView2"
        android:text="UserTemp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/Update_submit_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual_Mode"
        android:id="@+id/Update_ac_mode_toggleButton"
        android:layout_marginTop="37dp"
        android:checked="false"
        android:layout_below="@+id/Update_usertemp_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/Update_ac1_toggleButton"
        android:layout_alignEnd="@+id/Update_ac1_toggleButton" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AC1"
        android:id="@+id/Update_ac1_toggleButton"
        android:checked="false"
        android:layout_below="@+id/Update_ac_mode_toggleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AC2"
        android:id="@+id/Update_ac2_toggleButton"
        android:layout_below="@+id/Update_ac1_toggleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AC3"
        android:id="@+id/Update_ac3_toggleButton"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/Update_ac2_toggleButton"
        android:layout_alignRight="@+id/Update_ac2_toggleButton"
        android:layout_alignEnd="@+id/Update_ac2_toggleButton"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AC4"
        android:id="@+id/Update_ac4_toggleButton"
        android:layout_above="@+id/Update_submit_button"
        android:layout_toEndOf="@+id/Update_usertemp_textView"
        android:checked="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
